    }
    
    .page-link:hover {
        z-index: 2;
        color: orange;
        text-decoration: none;
        background-color: #e9ecef;
        border-color: #dee2e6;
    }
    
    .page-item.active .page-link {
        z-index: 1;
        color: #fff;
        background-color: orange;
        border-color: gray;
    }
    
    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background-color: #fff;
        border-color: #dee2e6;
    }
    
    .continue-read{
