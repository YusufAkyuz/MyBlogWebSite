<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var item in Model.Articles)
                        {
                            <input type="hidden" id="keyword" value="@Model.CurrentPage"/>
                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="~/stand-blog/assets/images/blog-post-01.jpg" alt="">
                                </div>
                                <div class="down-content">
                                    <a class="title-link title" asp-area="" asp-action="ArticleDetail" asp-controller="Home" asp-route-articleId="@item.Id">@item.Title</a>
                                    <ul class="post-info">
                                        <li>@item.User.FirstName @item.User.LastName</li>
                                        <li>@item.CreatedDate.ToString("dd/MM/yyyy")</li>
                                        <li>
                                            <i class="fa-solid fa-eye"></i> @item.ViewCount
                                        </li>
                                    </ul>
                                    <p>
                                        @(item.Content.Length > 280 ? item.Content.Substring(0, 280) + "..." : item.Content)
                                    </p>
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li>
                                                        <i class="fa fa-tags"></i>
                                                    </li>
                                                    <li>
                                                        <a>@item.Category.Name</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="col-6">
                                                <ul class="post-share">
                                                    <li>
                                                        <i class="fa fa-link"></i>
                                                    </li>
                                                    <li>
                                                        <a class="continue-read" asp-controller="Home" asp-action="ArticleDetail" asp-route-articleId="@item.Id" asp-area="">Devamını Oku</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-12">
                            <ul class="pagination justify-content-center mb-4 mt-4 btn-block">
                                @if (Model.HasPrevious)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize" asp-area=""> Önceki </a>
                                    </li>
                                }
                                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-route-currentPage="@i" asp-route-pageSize="@Model.PageSize" asp-area=""> @i </a>
                                    </li>
                                }
                                @if (Model.HasNext)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-area=""> Sonraki </a>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" asp-controller="Home" asp-action="Search" asp-area="" method="GET">
                                    <input type="text" name="keyword" class="searchText" placeholder="Anahtar kelime giriniz..." autocomplete="on">
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item recent-posts">
                                <div class="sidebar-heading">
                                    <h2>Recent Posts</h2>
                                </div>
                                @await Component.InvokeAsync("HomeRecentArticles")
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>Categoriler</h2>
                                    @await Component.InvokeAsync("HomeCategories")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
