<style>
    .pagination {
        display: flex;
        justify-content: center;
        padding: 0;
        list-style: none;
        border-radius: 0.25rem;
    }
    
    .page-item {
        margin: 0 0.25rem;
    }
    
    .page-link {
        position: relative;
        display: block;
        padding: 0.75rem 1.25rem;
        margin-left: -1px;
        line-height: 1.25;
        color: orange;
        background-color: #fff;
        border: 1px solid #bababa;
        transition: all 0.3s;
        border-radius: 0.25rem;
    }
    
    .page-link:hover {
        z-index: 2;
        color: orange;
        text-decoration: none;
        background-color: #e9ecef;
        border-color: #dee2e6;
    }
    
    .page-item.active .page-link {
        z-index: 1;
        color: #fff;
        background-color: orange;
        border-color: gray;
    }
    
    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background-color: #fff;
        border-color: #dee2e6;
    }

</style>