<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]BlogTea</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Blog.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/stand-blog/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Font Awesome -->

</head>
<body>

<!-- ***** Preloader Start ***** -->
<div id="preloader">
    <div class="jumper">
        <div></div>
        <div></div>
        <div></div>
    </div>
</div>
<!-- ***** Preloader End ***** -->

<!-- Header -->
<header class="">
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-area="">
                <h2>BlogTea<em>.</em></h2>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" style="flex-grow: 0" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-area="">
                            BLOGLAR
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"asp-controller="Home" asp-action="About" asp-area="">HAKKIMDA</a>
                    </li>
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link">Blog Entries</a> *@
                    @* </li> *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact" asp-area="">İLETİŞİM</a>
                    </li>
                    <li class="nav-item active admin">
                        <a class="nav-link" asp-area="Admin" asp-controller="Auth" asp-action="Login">YÖNETİCİ GİRİŞİ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

@RenderBody()

<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="social-icons">
                    <li>
                        <a href="https://www.instagram.com/yusufakkyz/"><i class="fa-brands fa-instagram"></i> Instagram</a>
                    </li>
                    <li>
                         <a href="https://github.com/YusufAkyuz"><i class="fa-brands fa-github"></i> GitHub</a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/yusuf-aky%C3%BCz-69162b237/"><i class="fa-brands fa-linkedin"></i> Linkedin</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-12">
                <div class="copyright-text">
                    <p>
                        <i class="fa-regular fa-copyright"></i>
                        Copyright 2024 BlogTea
                        Yusuf Akyüz
                    </p>
                </div>
            </div>  
        </div>
    </div>
    
</footer>

<!-- Bootstrap core JavaScript -->
<script src="~/stand-blog/vendor/jquery/jquery.min.js"></script>
<script src="~/stand-blog/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Additional Scripts -->
<script src="~/stand-blog/assets/js/custom.js"></script>
<script src="~/stand-blog/assets/js/owl.js"></script>
<script src="~/stand-blog/assets/js/slick.js"></script>
<script src="~/stand-blog/assets/js/isotope.js"></script>
<script src="~/stand-blog/assets/js/accordions.js"></script>

<script> 
      cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
      function clearField(t){                   //declaring the array outside of the
      if(! cleared[t.id]){                      // function makes it static and global
          cleared[t.id] = 1;  // you could use true and false, but that's more typing
          t.value='';         // with more chance of typos
          t.style.color='#fff';
          }
      }
</script>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>

<style>
    .link-footer{
        display: inline-flex; /* Yazı ve ikonun yan yana olmasını sağlar */
        align-items: center; /* Yatay ortalamayı sağlar */
        text-decoration: none; /* Alt çizgiyi kaldırır */
        font-size: 13px!important; /* Yazı boyutu */
        padding: 4px 12px; /* İç boşluk */
        border-radius: 4px; /* Köşe yuvarlama */
        transition: background-color 0.3s, color 0.3s; /* Renk geçişi efekti */
    }
    
    .link-footer:hover,
    .link-footer:focus {
        background-color: #e9f1f6; /* Hover arka plan rengi */
        color: #005582; /* Hover metin rengi */
        text-decoration: underline; /* Alt çizgi efekti */
    }
        
    .link-footer i {
        margin-right: 8px; /* İkon ve metin arasındaki boşluk */
        font-size: 18px; /* İkon boyutu */
    }
   .social-icons li {margin: 0px!important;padding: 0px!important;}
   /*.social-icons li a:before{margin: 0px!important;padding: 0px!important;}*/
   .social-icons li:after {
       content: "|";
       margin-right: 10px;
       margin-left: 10px!important;
       
   }
</style>

